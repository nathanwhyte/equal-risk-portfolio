<section>
  <div class="py-24 hero">
    <div class="flex flex-col text-center hero-content">
      <div class="block">
        <p class="text-4xl text-base-content/25">Welcome to</p>
        <h1 class="text-7xl font-bold">Equal Risk Portfolio Calculator</h1>
      </div>

      <% if authenticated? %>
        <div class="flex flex-col text-center hero-content">
          <%= link_to "View Portfolios", portfolios_path, class: "btn btn-accent btn-lg" %>
        </div>
      <% else %>
        <div class="flex flex-col text-center hero-content">
          <%= link_to "Sign In", new_session_path, class: "btn btn-accent btn-lg" %>
        </div>
        <div class="font-semibold alert alert-lg alert-soft alert-warning">
          <%= render "shared/icons/exclamation_triangle" %>
          Super-secret beta testing is in progress.
        </div>
        <p class="block text-xs italic font-medium text-base-content/50">
          This tool will be publicly available soon!
        </p>
      <% end %>
    </div>
  </div>
</section>
