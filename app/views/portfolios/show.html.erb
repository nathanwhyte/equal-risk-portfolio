<div
  class="flex justify-between items-center pt-4 text-sm text-base-content/75"
>
  <div>
    &larr;
    <%= link_to "Back to Portfolios List", portfolios_path, class: "link link-hover" %>
  </div>
  <p style="color: green"><%= notice %></p>
</div>

<div class="flex flex-col gap-8 pt-4">
  <div class="flex gap-2 justify-between items-start">
    <div>
      <span class="text-lg font-semibold text-base-content/75">Portfolio Name</span>
      <span class="block text-3xl font-bold text-accent">
        <%= @portfolio.name %>
      </span>
    </div>

    <%# TODO: convert these tags to use Rails built-ins %>
    <div class="flex gap-2 items-center">
      <label for="version_select" class="text-xs font-semibold text-base-content/75">Version:</label>
      <select
        class="mr-1 border cursor-pointer  bg-base-200 border-base-300 max-w-2xs select select-ghost select-primary select-sm w-fit"
        onchange="if(this.value) { window.location.href = this.value; } else { window.location.href = '<%= portfolio_path(@portfolio) %>'; }"
      >
        <% @portfolio.portfolio_versions.recent.each do |version| %>
          <option
            value="<%= version_portfolio_path(@portfolio, version.version_number) %>"
            <%= "selected" if @viewing_version&.version_number == version.version_number %>
          >
            <% if version.title.present? %>
              <%= version.title %>
            <% else %>
              v<%= version.version_number %>
            <% end %>
          </option>
        <% end %>
      </select>

      <div>
        <%= link_to "Edit",
        edit_portfolio_path(@portfolio),
        class: "btn btn-accent btn-soft" %>
      </div>
      <div>
        <%= button_to "Destroy",
        @portfolio,
        method: :delete,
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure you want to destroy this portfolio?",
        },
        class: "btn btn-error btn-soft" %>
      </div>
    </div>
  </div>

  <div>
    <div class="text-lg font-semibold text-base-content/75">
      Tickers and Weights
      <% if @portfolio.allocations and @portfolio.allocations.values.any? { |a| a["enabled"] } %>
        <span class="ml-2 font-medium badge badge-sm badge-warning">
          Adjusted for Allocations
        </span>
      <% end %>
    </div>
    <div class="flex flex-wrap gap-4 pt-2">
      <% for ticker in @tickers %>
        <div
          class="flex gap-6 items-center p-2 max-w-xs border shadow-md  border-base-300 h-fit min-w-3xs w-fit"
        >
          <%= render partial: "weight",
          locals: {
            ticker: ticker,
            weight: @adjusted_weights[ticker.symbol],
          } %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="pt-4">
    <%= render partial: "allocation", locals: { portfolio: @portfolio } %>
  </div>

  <div class="pt-4">
    <div class="mb-4 text-lg font-semibold text-base-content/75">
      Version History
    </div>

    <%# TODO: add "current"/"latest" and "base" badges %>
    <%# TODO: add "load version" button %>
    <% if @portfolio.portfolio_versions.any? %>
      <div class="space-y-2">
        <% @portfolio.portfolio_versions.chronological.each do |version| %>
          <div
            class="flex flex-col gap-1 items-start p-3 rounded border shadow-sm  border-base-300"
          >
            <div class="text-lg font-semibold text-base-content/75">
              Version
              <%= version.version_number %>
              <% if version.title.present? %>
                -
                <span class="text-primary"><%= version.title %></span>
              <% end %>
            </div>

            <% if version.notes.present? %>
              <div class="text-sm text-base-content/50">
                <%= version.notes %>
              </div>
            <% end %>

            <span class="text-xs text-base-content/50">
              Created
              <span class="font-semibold text-base-content/75">
                <%= version.created_at.strftime("%B %d, %Y") %>
              </span>
              at
              <span class="font-semibold text-base-content/75">
                <%= version.created_at.strftime("%I:%M %p") %>
              </span>
            </span>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-base-content/50">No version history yet. Create a new version when editing to track
        changes.</p>
    <% end %>
  </div>
</div>
