<div class="flex flex-col gap-4 py-8">
  <h2 class="text-2xl font-bold">New Version
    <span class="ml-1 text-lg italic font-medium text-base-content/25">
      (optional)</span></h2>

  <%# TODO: add some subtext about version history usage %>

  <%= form.fields_for :portfolio_versions do |version_form| %>
    <div class="flex flex-col gap-4">
      <div class="flex flex-col gap-2">
        <%= version_form.label :version_name, "Version Name", class: "font-medium" %>
        <%= version_form.text_field :version_name,
                                placeholder: "e.g. \"Add Cloudflare\"",
                                class: "input" %>
      </div>

      <div class="flex flex-col gap-2">
        <%= version_form.label :notes, "Version Notes", class: "font-medium" %>
        <%= version_form.text_area :notes,
                               placeholder:
                                 "More about changes made in this version...",
                               class: "w-1/3 textarea" %>
      </div>
    </div>
  <% end %>

  <%# TODO: make sure this submit is handled differently than "update current version" %>
  <%= form.submit "Create New Version", class: "btn btn-soft btn-success w-fit" %>
</div>
